---
import "../styles/fonts.css"
import "../styles/tailwind.css"
import Footer from "@components/Footer.astro"
import Header from "@components/Header.astro"
import GoToTop from "@components/GoToTop.astro"
import { ViewTransitions } from "astro:transitions"
---

<html lang="en" class="scrollable scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<slot name="head" />

		<ViewTransitions />
	</head>
	<body
		id="top"
		class="grid min-h-dvh grid-cols-1 grid-rows-[auto_minmax(0,_1fr)_auto] bg-grayish-50 text-grayish-900 dark:bg-grayish-900 dark:text-grayish-100"
	>
		<header
			class="mx-auto flex w-full max-w-7xl items-center justify-between p-4 sm:px-8 sm:py-6 md:px-16 md:py-8 lg:px-20"
			aria-label="Header"
		>
			<Header />
		</header>
		<main class="relative mx-auto w-full max-w-7xl px-4 py-8 md:px-8 lg:py-12" aria-label="Main">
			<slot />
			<!-- Go to top button -->
			<GoToTop />
		</main>
		<footer
			class="mx-auto flex w-full flex-col items-center gap-6 bg-grayish-800 py-6 text-grayish-300"
			aria-label="Footer"
		>
			<Footer />
		</footer>
		<!-- <Toaster /> -->
	</body>
</html>
